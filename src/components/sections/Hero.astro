---
import { Container, Button } from '@/components/common';
import { LanguageSwitcher } from '@/components/islands/LanguageSwitcher';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-gray-50 via-white to-primary/5">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-96 h-96 bg-primary rounded-full filter blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-primary-light rounded-full filter blur-3xl animate-pulse delay-1000"></div>
  </div>
  
  <!-- Navigation -->
  <nav class="absolute top-0 left-0 right-0 z-50 py-6">
    <Container>
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-gradient-to-r from-primary to-primary-dark rounded-lg"></div>
          <span class="text-xl font-bold text-gray-900">DeepHand</span>
        </div>
        <LanguageSwitcher client:load />
      </div>
    </Container>
  </nav>

  <!-- Hero Content -->
  <Container className="relative z-10 text-center">
    <div class="max-w-4xl mx-auto">
      <!-- Main Heading -->
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-gray-900 mb-6 animate-fade-in-up">
        <span class="block text-gradient">AI・ロボティクス向け</span>
        <span class="block mt-2">高精度データアノテーション</span>
      </h1>
      
      <!-- Description -->
      <p class="text-lg md:text-xl text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed animate-fade-in-up" style="animation-delay: 0.2s;">
        専門知識を持つアノテーターが、あなたのAI・ロボティクスプロジェクトに最適なデータアノテーションを提供します。
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up" style="animation-delay: 0.4s;">
        <Button size="lg" asChild>
          <a href="/request-data">
            データを依頼する
          </a>
        </Button>
        <Button variant="secondary" size="lg" asChild>
          <a href="#services">
            サービス詳細
          </a>
        </Button>
      </div>
      
      <!-- Stats -->
      <div class="grid grid-cols-3 gap-8 mt-16 pt-16 border-t border-gray-200 animate-fade-in-up" style="animation-delay: 0.6s;">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-gradient mb-2">99%+</div>
          <div class="text-sm text-gray-600">精度保証</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-gradient mb-2">24h</div>
          <div class="text-sm text-gray-600">平均対応時間</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-gradient mb-2">50+</div>
          <div class="text-sm text-gray-600">プロジェクト実績</div>
        </div>
      </div>
    </div>
  </Container>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-gray-400 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-gray-400 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>