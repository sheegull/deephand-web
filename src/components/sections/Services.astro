---
import { Container, Card, CardHeader, CardTitle, CardDescription, CardContent } from '@/components/common';
import { Image, Video, Activity, FileText } from 'lucide-react';

const services = [
  {
    icon: 'Image',
    title: '画像アノテーション',
    description: 'コンピュータビジョン・ロボティクス向け高精度画像アノテーション',
    features: ['物体検出', 'セマンティックセグメンテーション', '姿勢推定', 'OCR']
  },
  {
    icon: 'Video',
    title: '動画ラベリング',
    description: 'モーション解析・追跡向けフレームバイフレーム動画アノテーション',
    features: ['物体追跡', '行動認識', '時系列セグメンテーション']
  },
  {
    icon: 'Activity',
    title: 'センサーデータ処理',
    description: 'IoT・ロボティクス向けセンサーデータ構造化アノテーション',
    features: ['時系列解析', '異常検知', 'パターン認識']
  },
  {
    icon: 'FileText',
    title: 'テキスト・NLP',
    description: '自然言語処理・テキストアノテーションサービス',
    features: ['固有表現抽出', '感情分析', 'テキスト分類']
  }
];
---

<section id="services" class="section-padding bg-white">
  <Container>
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        私たちのサービス
      </h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
        AI・ロボティクス分野に特化した包括的なデータアノテーション
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {services.map((service, index) => (
        <Card class="group hover:shadow-xl hover:-translate-y-2 transition-all duration-500 border-l-4 border-l-primary/20 hover:border-l-primary">
          <CardHeader>
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 bg-gradient-to-r from-primary/10 to-primary-light/10 rounded-xl flex items-center justify-center group-hover:from-primary/20 group-hover:to-primary-light/20 transition-colors">
                {service.icon === 'Image' && <Image class="w-6 h-6 text-primary" />}
                {service.icon === 'Video' && <Video class="w-6 h-6 text-primary" />}
                {service.icon === 'Activity' && <Activity class="w-6 h-6 text-primary" />}
                {service.icon === 'FileText' && <FileText class="w-6 h-6 text-primary" />}
              </div>
              <CardTitle class="group-hover:text-primary transition-colors">{service.title}</CardTitle>
            </div>
            <CardDescription class="text-base leading-relaxed">
              {service.description}
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="space-y-2">
              {service.features.map((feature) => (
                <div class="flex items-center gap-2">
                  <div class="w-2 h-2 bg-primary rounded-full"></div>
                  <span class="text-sm text-gray-700">{feature}</span>
                </div>
              ))}
            </div>
          </CardContent>
        </Card>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <p class="text-gray-600 mb-6">プロジェクトに最適なソリューションをご提案いたします</p>
      <a href="#contact" class="btn-primary">
        無料相談を申し込む
      </a>
    </div>
  </Container>
</section>