---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { PrivacyPolicyPage } from '@/components/PrivacyPolicyPage';
import { setCurrentLanguage } from '@/lib/i18n';
import '@/styles/app.css';

// サーバーサイドで英語に設定
setCurrentLanguage('en');
---

<BaseLayout 
  title="Privacy Policy - DeepHand"
  description="DeepHand's privacy policy. Detailed information about our collection, use, and management of personal information."
>
  <PrivacyPolicyPage 
    client:load 
    onLogoClick={() => window.location.href = '/en'}
  />
</BaseLayout>