---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { TermsOfServicePage } from '@/components/TermsOfServicePage';
import { setCurrentLanguage } from '@/lib/i18n';
import '@/styles/app.css';

// サーバーサイドで英語に設定
setCurrentLanguage('en');
---

<BaseLayout 
  title="Terms of Service - DeepHand"
  description="DeepHand's data annotation service terms of service. Conditions for using our AI and robotics specialized services."
>
  <TermsOfServicePage 
    client:load 
    onLogoClick={() => window.location.href = '/en'}
  />
</BaseLayout>