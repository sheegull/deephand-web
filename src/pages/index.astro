---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { HeroSection } from '@/components/HeroSection';
import { setCurrentLanguage } from '@/lib/i18n';
import '@/styles/app.css';

// サーバーサイドで日本語に設定
setCurrentLanguage('ja');
---

<BaseLayout
  title="DeepHand - AI & Robotics Data Annotation Service"
  description="DeepHand is a team of annotation experts centered on robotics. We deliver high-quality annotated data."
>
  <HeroSection
    client:load
    onRequestClick={() => window.location.href = '/request'}
    onNavClick={(element) => {
      if (element === 'get-started') {
        window.location.href = '/request';
      } else if (element === 'login') {
        // ログイン機能は未実装
        console.log('Login clicked');
      } else {
        // その他のナビゲーション
        const elementId = element.replace(/\s+/g, '-');
        const targetElement = document.getElementById(elementId);
        if (targetElement) {
          targetElement.scrollIntoView({ behavior: 'smooth' });
        }
      }
    }}
    onLogoClick={() => window.location.href = '/'}
  />
</BaseLayout>
