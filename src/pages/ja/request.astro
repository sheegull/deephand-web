---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { RequestDataPage } from '@/components/RequestDataPage';
import { setCurrentLanguage } from '@/lib/i18n';

setCurrentLanguage('ja');
---

<BaseLayout 
  title="データ依頼 - DeepHand | 高品質なデータアノテーションサービス"
  description="お客様のプロジェクトに最適なデータアノテーションサービスをご依頼ください。AI・ロボティクス専門チームが高品質なアノテーションを提供します。"
>
  <RequestDataPage 
    client:load 
    onLogoClick={() => window.location.href = '/ja'}
    onFooterClick={(element) => {
      if (element === 'terms-of-service') {
        console.log('Terms of service clicked');
      } else if (element === 'privacy-policy') {
        console.log('Privacy policy clicked');
      }
    }}
  />
</BaseLayout>