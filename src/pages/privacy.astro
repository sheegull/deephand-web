---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { PrivacyPolicyPage } from '@/components/PrivacyPolicyPage';
import { setCurrentLanguage } from '@/lib/i18n';
import '@/styles/app.css';

// サーバーサイドで日本語に設定
setCurrentLanguage('ja');
---

