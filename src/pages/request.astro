---
import BaseLayoutEn from '@/layouts/BaseLayoutEn.astro';
import { RequestDataPage } from '@/components/RequestDataPage';
import { setCurrentLanguage } from '@/lib/i18n';
import '@/styles/app.css';

// サーバーサイドで英語に設定
setCurrentLanguage('en');
---

<BaseLayoutEn 
  title="Request Data - DeepHand"
  description="Data annotation request form for AI and robotics projects. Our expert annotators provide high-quality labeling services."
>
  <RequestDataPage 
    client:load 
    onLogoClick={() => window.location.href = '/'}
    onFooterClick={(element) => {
      if (element === 'terms-of-service') {
        console.log('Terms of service clicked');
      } else if (element === 'privacy-policy') {
        console.log('Privacy policy clicked');
      }
    }}
  />
</BaseLayoutEn>