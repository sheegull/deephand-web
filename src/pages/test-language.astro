---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { LanguageTestComponent } from '@/components/LanguageTestComponent';
import { setCurrentLanguage } from '@/lib/i18n';

setCurrentLanguage('ja');
---

<BaseLayout 
  title="Language Test - DeepHand"
  description="Language switching test page"
>
  <div class="min-h-screen bg-[#1e1e1e] text-white p-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold mb-8">言語切替テストページ</h1>
      
      <div class="space-y-6">
        <p class="text-lg">このページで言語切替ボタンをテストできます。</p>
        
        <!-- LanguageSwitcher をテスト -->
        <div class="p-4 bg-[#2a2a2a] rounded-lg">
          <h2 class="text-xl mb-4">言語切替ボタン:</h2>
          <div class="flex justify-center">
            <!-- Note: LanguageSwitcher は GlobalHeader で実装済み -->
            <p class="text-sm text-gray-400">ヘッダーの言語切替ボタンをテストしてください</p>
          </div>
        </div>
        
        <!-- SolutionsPage をテスト -->
        <div class="p-4 bg-[#2a2a2a] rounded-lg">
          <h2 class="text-xl mb-4">Solutions Page テスト:</h2>
          <a href="/solutions" class="inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors">
            Solutions ページへ
          </a>
        </div>
        
        <div class="p-4 bg-[#2a2a2a] rounded-lg">
          <h2 class="text-xl mb-4">English Solutions Page テスト:</h2>
          <a href="/ja/solutions" class="inline-block px-6 py-3 bg-green-600 hover:bg-green-700 rounded-lg transition-colors">
            日本語 Solutions ページへ
          </a>
        </div>
        
        <!-- 言語切替テストコンポーネント -->
        <LanguageTestComponent client:load />
      </div>
    </div>
  </div>
</BaseLayout>